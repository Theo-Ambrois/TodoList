@page "/Image"

@if(imageSource is not null)
{
    <div>
        <img src="@imageSource">
    </div>
}

@for(var i = 1; i <= 3; i++)
{
    var imageId = i;
    <button @onclick="() => MontrerImage(imageId)">
        Image @imageId
    </button>
}


@code {
    private string? imageSource;

    private void MontrerImage(int id)
    {
        imageSource = $"images/chien{id}.jpg";
    }
}